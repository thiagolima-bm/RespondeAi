= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title, class: "span6"
  .field
    = f.label :author
    = f.text_field :author, class: "span6"
  .field
    = f.label :edition
    = f.text_field :edition, class: "span6"
  .field
    = f.label :publisher
    = f.text_field :publisher, class: "span6"
  .field
    = f.label :isbn10
    = f.text_field :isbn10, class: "span6"
  .field
    = f.label :isbn13
    = f.text_field :isbn13, class: "span6"
  .field
    = f.label :description
    = f.text_area :description, class: "span6"
  .actions
    = f.submit 'Save', class: "btn btn-primary"